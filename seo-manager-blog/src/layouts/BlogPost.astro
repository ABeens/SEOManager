---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: string;
    author?: string;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article>
    <header>
      <h1>{frontmatter.title}</h1>
      <div class="meta">
        <time>{new Date(frontmatter.pubDate).toLocaleDateString()} {new Date(frontmatter.pubDate).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</time>
        {frontmatter.author && <span> â€¢ by {frontmatter.author}</span>}
      </div>
      {frontmatter.tags && (
        <div class="tags">
          {frontmatter.tags.map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .meta {
    color: #666;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .tags {
    margin-bottom: 2rem;
  }

  .tag {
    display: inline-block;
    background: #e3f2fd;
    color: #1976d2;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    margin-right: 0.5rem;
  }

  .prose {
    line-height: 1.7;
  }

  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .prose p {
    margin-bottom: 1rem;
  }

  .prose pre {
    background: #2d3748;
    color: #e2e8f0;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .prose code {
    background: #f1f5f9;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .prose pre code {
    background: none;
    padding: 0;
  }

  .prose blockquote {
    border-left: 4px solid #3498db;
    padding-left: 1rem;
    margin-left: 0;
    font-style: italic;
    color: #666;
  }

  .prose ul, .prose ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }
</style>