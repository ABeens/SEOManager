---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const recentPosts = await getCollection('blog');
const sortedPosts = recentPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="SEO Manager Blog" description="AI-powered content generation for better SEO results">
  <!-- Hero Section -->
  <section class="hero">
    <div class="max-w-4xl mx-auto">
      <h1>
        Welcome to
        <span class="gradient-text">
          SEO Manager Blog
        </span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Discover AI-powered content generation that creates SEO-optimized blog posts tailored to your audience and keywords.
      </p>
      <div class="flex flex-col gap-4 justify-center" style="gap: var(--space-4);">
        <a href="/generate" class="btn btn-primary btn-lg">
          Generate Your First Post
        </a>
        <a href="/blog" class="btn btn-secondary btn-lg">
          Browse All Posts
        </a>
      </div>
    </div>
  </section>

  {sortedPosts.length > 0 && (
    <section class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Recent Posts</h2>
        <a href="/blog" class="font-medium flex items-center gap-2">
          View all posts
          <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {sortedPosts.map((post) => (
          <article class="card p-6">
            <div class="mb-4">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                <a href={`/blog/${post.slug}/`}>
                  {post.data.title}
                </a>
              </h3>

              {post.data.description && (
                <p class="text-gray-600 text-sm">
                  {post.data.description}
                </p>
              )}
            </div>

            <div class="flex items-center justify-between text-sm text-gray-500">
              <time class="flex items-center gap-2">
                <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {post.data.pubDate.toLocaleDateString()} {post.data.pubDate.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
              </time>
              {post.data.author && (
                <span class="flex items-center gap-2">
                  <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  {post.data.author}
                </span>
              )}
            </div>

            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex gap-2 mt-4" style="flex-wrap: wrap;">
                {post.data.tags.slice(0, 3).map((tag:any) => (
                  <span class="tag">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </article>
        ))}
      </div>
    </section>
  )}

  {sortedPosts.length === 0 && (
    <section class="text-center py-16">
      <div class="max-w-md mx-auto">
        <div style="width: 6rem; height: 6rem; margin: 0 auto var(--space-6); background: var(--primary-100); border-radius: var(--radius-full); display: flex; align-items: center; justify-content: center;">
          <svg style="width: 3rem; height: 3rem; color: var(--primary-600);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">No Posts Yet</h2>
        <p class="text-gray-600 mb-6">
          Get started by creating your first AI-generated blog post!
        </p>
        <a href="/generate" class="btn btn-primary">
          Create Your First Post
        </a>
      </div>
    </section>
  )}

  <!-- Features Section -->
  <section class="py-16 mt-16" style="background: white; border-radius: var(--radius-2xl); box-shadow: var(--shadow-sm);">
    <div class="max-w-6xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Why Choose SEO Manager Blog?
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="feature-icon">
            <svg style="width: 2rem; height: 2rem; color: var(--primary-600);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">AI-Powered</h3>
          <p class="text-gray-600">
            Advanced AI algorithms create high-quality, engaging content tailored to your specific keywords and audience.
          </p>
        </div>

        <div class="text-center">
          <div class="feature-icon">
            <svg style="width: 2rem; height: 2rem; color: var(--primary-600);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">SEO Optimized</h3>
          <p class="text-gray-600">
            Every post is optimized for search engines with proper meta descriptions, keywords, and structure.
          </p>
        </div>

        <div class="text-center">
          <div class="feature-icon">
            <svg style="width: 2rem; height: 2rem; color: var(--primary-600);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Time Saving</h3>
          <p class="text-gray-600">
            Generate comprehensive, well-researched blog posts in minutes instead of hours of manual writing.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
