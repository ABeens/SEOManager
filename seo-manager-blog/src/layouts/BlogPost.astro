---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
    pubDate: string;
    author?: string;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{frontmatter.title}</h1>
      <div class="flex items-center gap-4 text-sm text-gray-500 mb-6">
        <time class="flex items-center gap-2">
          <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          {new Date(frontmatter.pubDate).toLocaleDateString()} {new Date(frontmatter.pubDate).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}
        </time>
        {frontmatter.author && (
          <span class="flex items-center gap-2">
            <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            {frontmatter.author}
          </span>
        )}
      </div>
      {frontmatter.tags && (
        <div class="flex gap-2 mb-8" style="flex-wrap: wrap;">
          {frontmatter.tags.map((tag:any) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .prose {
    line-height: 1.7;
    color: var(--gray-900);
  }

  .prose h2 {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--gray-900);
  }

  .prose h3 {
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--gray-900);
  }

  .prose p {
    margin-bottom: var(--space-4);
  }

  .prose pre {
    background: var(--gray-800);
    color: var(--gray-100);
    padding: var(--space-4);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--space-4) 0;
  }

  .prose code {
    background: var(--gray-100);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--gray-800);
  }

  .prose pre code {
    background: none;
    padding: 0;
    color: var(--gray-100);
  }

  .prose blockquote {
    border-left: 4px solid var(--primary-600);
    padding-left: var(--space-4);
    margin-left: 0;
    font-style: italic;
    color: var(--gray-600);
  }

  .prose ul, .prose ol {
    margin-bottom: var(--space-4);
    padding-left: var(--space-8);
  }

  .prose li {
    margin-bottom: var(--space-2);
  }
</style>